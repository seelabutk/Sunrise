    <!-- <div class="App__main js--map"></div> -->
    <nav class="a" id="navbar">
        Sunrise Demo
    </nav>
    <div class="b missions" >
        <button id="observation" class="missionButton">Observation</button>
    </div>
    <div class="c"
        id="hyperimage"
        style="width: 512px; height: 512px"
    ></div>
